<!-- Modal dialog with a backdrop -->
<div class="modal @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay; overflow-y: auto;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Modal title -->
                <h5 class="modal-title">@Title</h5>

                <!-- Close button for the modal -->
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                </button>
            </div>
            <div class="modal-body">
                <!-- Content of the modal provided by ChildContent parameter -->
                @ChildContent
            </div>
        </div>
    </div>
</div>

<!-- Backdrop for the modal -->
@if (showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    // Parameters for the modal component
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    // Internal state variables
    private string modalDisplay = "none;";
    private string modalClass = string.Empty;
    private bool showBackdrop = false;

    // Method to open the modal
    public void Open()
    {
        modalDisplay = "block";
        modalClass = "show";
        showBackdrop = true;
    }

    // Method to close the modal
    public void Close()
    {
        modalDisplay = "none";
        modalClass = string.Empty;
        showBackdrop = false;
    }
}
